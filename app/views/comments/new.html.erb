<h1>Novo comentário no perfil de:</h1>
<h3><%= @profile.name%></h3>
<% if @comment.errors.any?%>
  <p>Por favor, verifique os erros e tente novamente:</p>
  <ul>
    <% @comment.errors.full_messages.each do |message| %>  
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<%= form_for [@profile, @comment] do |f|%>
  <%= f.label :body %>
  <%= f.text_area :body %>
  <%= f.submit 'Enviar comentário'%>
<% end%>
<%= link_to 'Voltar', job_applications_path %>
