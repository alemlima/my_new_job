<% if @job_application.errors.any?%>
  <p>Por favor, verifique os erros e tente novamente:</p>
  <ul>
    <%@job_application.errors.full_messages.each do |message| %>  
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
  
<h3>Você está se candidatando a vaga:</h3>
<h4><%= @job.title %></h4>

<dl>
  <dt>Descrição da vaga:</dt>
  <dd><%= @job.description %></dd>
</dl>
<%= form_with model: @job_application, url: confirm_application_for_job_path, method: :post do |f| %>
  <%= f.label :cover_letter %>
  <%= f.text_area :cover_letter%>
  <%= f.submit 'Enviar'%>
<% end %>
<%= link_to 'Voltar', jobs_path %>